{
    "name": "fabyo0/weight-conversion",
    "description": "A simple and flexible weight conversion package for PHP",
    "keywords": [
        "weight-conversion",
        "weight",
        "converter",
        "unit-conversion",
        "kilogram",
        "gram",
        "pound"
    ],
    "homepage": "https://github.com/fabyo0/weight-conversion",
    "license": "MIT",
    "authors": [
        {
            "name": "Emre Dikmen",
            "email": "emredikmen002@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.2"
    },
    "require-dev": {
        "pestphp/pest": "^3.0",
        "spatie/ray": "^1.28"
    },
    "autoload": {
        "psr-4": {
            "Fabyo0\\WeightConversion\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Fabyo0\\WeightConversion\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/pest"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
